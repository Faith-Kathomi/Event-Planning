<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for Full Name with improved accessibility and touch target -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Full Name"
        android:padding="16dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes" />  <!-- Corrected redundant attribute -->

    <!-- EditText for Email with improved accessibility and touch target -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Email Address"
        android:padding="16dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes" />  <!-- Corrected redundant attribute -->

    <!-- EditText for Phone Number with improved accessibility and touch target -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Phone Number"
        android:padding="16dp"
        android:textSize="16sp"
        android:importantForAccessibility="yes" />  <!-- Corrected redundant attribute -->

    <!-- Button to confirm the booking -->
    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="16sp" />
</LinearLayout>
